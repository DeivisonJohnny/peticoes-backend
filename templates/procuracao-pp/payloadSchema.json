{
  "type": "object",
  "title": "Schema para Procuração Pessoa Física",
  "description": "Campos necessários para gerar procuração simples para pessoa física",
  "properties": {
    "client": {
      "type": "object",
      "description": "Dados do cliente/outorgante",
      "properties": {
        "name": { "type": "string", "description": "Nome completo" },
        "nationality": { "type": "string", "description": "Nacionalidade (ex: brasileiro, brasileira)" },
        "cpf": { "type": "string", "description": "CPF formatado" },
        "address": { "type": "string", "description": "Endereço completo (obsoleto - use campos separados)" },
        "logradouro": { "type": "string", "description": "Logradouro (ex: Rua Exemplo)" },
        "numero": { "type": "string", "description": "Número (ex: 123)" },
        "complemento": { "type": "string", "description": "Complemento (opcional)" },
        "bairro": { "type": "string", "description": "Bairro" },
        "cidadeEstado": { "type": "string", "description": "Cidade/Estado (ex: São Paulo/SP)" }
      },
      "required": ["name", "nationality", "cpf"]
    },
    "document": {
      "type": "object",
      "description": "Dados do documento",
      "properties": {
        "locationAndDate": { 
          "type": "string", 
          "description": "Local e data formatados (ex: São Paulo/SP, 05 de novembro de 2025)" 
        }
      },
      "required": ["locationAndDate"]
    }
  },
  "required": ["client", "document"]
}