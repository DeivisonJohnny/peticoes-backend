{
  "type": "object",
  "title": "Schema para LOAS - Auxílio-Doença",
  "description": "Campos necessários para gerar ação previdenciária de concessão de benefício por incapacidade",
  "properties": {
    "client": {
      "type": "object",
      "description": "Dados do cliente/requerente",
      "properties": {
        "name": { 
          "type": "string", 
          "description": "Nome completo do requerente" 
        },
        "nationality": { 
          "type": "string", 
          "description": "Nacionalidade (ex: brasileira, brasileiro)" 
        },
        "rg": { 
          "type": "string", 
          "description": "RG do requerente" 
        },
        "cpf": { 
          "type": "string", 
          "description": "CPF formatado (ex: 123.456.789-00)" 
        },
        "address": { 
          "type": "string", 
          "description": "Endereço completo (Rua, número, bairro, cidade, estado)" 
        },
        "cep": { 
          "type": "string", 
          "description": "CEP formatado (ex: 07722-105)" 
        }
      },
      "required": ["name", "nationality", "rg", "cpf", "address", "cep"]
    },
    "document": {
      "type": "object",
      "description": "Dados do documento/petição",
      "properties": {
        "juizado": { 
          "type": "string", 
          "description": "Nome do Juizado (ex: JUIZADO ESPECIAL FEDERAL DE OSASCO/SP)" 
        },
        "valorCausa": { 
          "type": "string", 
          "description": "Valor da causa formatado (ex: R$ 132.911,99)" 
        },
        "valorCausaExtenso": { 
          "type": "string", 
          "description": "Valor da causa por extenso" 
        },
        "especialidadePericia": { 
          "type": "string", 
          "description": "Especialidade médica para perícia (ex: ORTOPEDIA, PSIQUIATRIA)" 
        }
      },
      "required": ["juizado", "valorCausa", "valorCausaExtenso", "especialidadePericia"]
    },
    "benefit": {
      "type": "object",
      "description": "Informações sobre o benefício previdenciário",
      "properties": {
        "requested": { 
          "type": "string", 
          "description": "Benefício requerido (ex: Auxílio por incapacidade temporária ou Aposentadoria por incapacidade permanente)" 
        },
        "number": { 
          "type": "string", 
          "description": "Número do benefício (ex: 719.474.755-4)" 
        },
        "der": { 
          "type": "string", 
          "description": "Data de Entrada do Requerimento (DER) formatada (ex: 13/02/2025)" 
        },
        "denialReason": { 
          "type": "string", 
          "description": "Razão do indeferimento/cessação" 
        },
        "denialDate": { 
          "type": "string", 
          "description": "Data do indeferimento formatada (ex: 07/05/2025)" 
        }
      },
      "required": ["requested", "number", "der", "denialReason", "denialDate"]
    },
    "disease": {
      "type": "object",
      "description": "Informações sobre a doença/enfermidade",
      "properties": {
        "name": { 
          "type": "string", 
          "description": "Nome da doença/enfermidade em MAIÚSCULAS (ex: TRANSTORNOS DE DISCOS INTERVERTEBRAIS E SACROILEÍTE)" 
        },
        "limitations": { 
          "type": "string", 
          "description": "Limitações decorrentes da doença" 
        },
        "symptoms": { 
          "type": "string", 
          "description": "Principais sintomas experimentados" 
        },
        "inconsistencies": { 
          "type": "string", 
          "description": "Inconsistências da avaliação médico-pericial do INSS" 
        }
      },
      "required": ["name", "limitations", "symptoms", "inconsistencies"]
    },
    "occupation": {
      "type": "object",
      "description": "Dados sobre a ocupação do requerente",
      "properties": {
        "title": { 
          "type": "string", 
          "description": "Título da ocupação (ex: Diarista)" 
        },
        "description": { 
          "type": "string", 
          "description": "Descrição sumária das atividades" 
        },
        "conditions": { 
          "type": "string", 
          "description": "Condições gerais do serviço" 
        }
      },
      "required": ["title", "description", "conditions"]
    }
  },
  "required": ["client", "document", "benefit", "disease", "occupation"]
}

